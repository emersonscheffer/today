#include <iostream>

using namespace std;

int main() {
int times = 0;
double pi = 4;
int counter = 1;

cout << "Enter number of accuracy to find Pi: ";
    cin >> times;

while (counter <= times){

if (counter == 1)
        {
            ;
        }
        else if (counter % 2 == 1)
        {
            pi = pi + (4.0 / ((2 * counter) - 1));
                                    
        }
        else
        {
            pi = pi - (4.0 / ((2 * counter) - 1));
        }


counter++;
}


cout << "Value is: " << pi << endl;

return 0;
}
